<Window x:Class="Momento_Pattern.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Momento_Pattern"
        mc:Ignorable="d"
        Title="Memento Degsine Pattern" Height="350" Width="535">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="68*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="247*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="textbox" FontSize="25" Height="108" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Grid.RowSpan="3" HorizontalAlignment="Left" Width="500"/>
        <Button x:Name="savebtn" Content="Save" HorizontalAlignment="Left" Margin="144,163.4,0,0" VerticalAlignment="Top" Width="75" Grid.Row="2"/>
        <Button x:Name="undobtn" Content="Undo" HorizontalAlignment="Left" Margin="224,163.4,0,0" VerticalAlignment="Top" Width="75" Grid.Row="2"/>
        <Button x:Name="redobtn" Content="Redo" HorizontalAlignment="Left" Margin="304,163.4,0,0" VerticalAlignment="Top" Width="75" Grid.Row="2"/>

    </Grid>
</Window>
